<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ModeOfPowerEntry">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_alignParentTop="true"
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/galaxy_blue"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_back_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"

                    android:src="@drawable/ic_baseline_arrow_back_24"/>

                <TextView
                    android:id="@+id/toolbarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:maxLines="1"
                    android:text="Submit Power"
                    android:textSize="22dp"
                    android:fontFamily="@font/gilroyregular"
                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:visibility="visible" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you like to submit power?"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/gilroy"
            android:textColor="@color/galaxy_blue"
            android:lines="1"/>
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/use_saved_power"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_save_24"/>
                <TextView
                    android:id="@+id/saved_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:text="Use Saved Powers"
                    android:textSize="20dp"
                    android:fontFamily="@font/gilroyregular"
                    android:textColor="@color/galaxy_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Saved Powers are Available"
                    android:fontFamily="@font/gilroylight"
                    android:textColor="@color/galaxy_blue"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/saved_power"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/manual_power"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_text_snippet_24"/>
                <TextView
                    android:id="@+id/manual_power_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:text="Enter Power manually"
                    android:textSize="20dp"
                    android:fontFamily="@font/gilroyregular"
                    android:textColor="@color/galaxy_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Enter your details yourself"
                    android:fontFamily="@font/gilroylight"
                    android:textColor="@color/galaxy_blue"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/manual_power_text"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/upload_power"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_photo_camera_24"/>
                <TextView
                    android:id="@+id/camera_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:text="Upload or Take Photo"
                    android:textSize="20dp"
                    android:fontFamily="@font/gilroyregular"
                    android:textColor="@color/galaxy_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Upload prescribtion from your phone"
                    android:fontFamily="@font/gilroylight"
                    android:textColor="@color/galaxy_blue"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/camera_power"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-OR-"
            android:fontFamily="@font/gilroymedium"
            android:textColor="@color/galaxy_blue"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20dp"/>
        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"

            android:id="@+id/power_dont_know"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_headset_mic_24"/>
                <TextView
                    android:id="@+id/unknown_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:text="I don't know my power"
                    android:textSize="20dp"
                    android:fontFamily="@font/gilroyregular"
                    android:textColor="@color/galaxy_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:lines="2"
                    android:text="We will call you to take your power after order is placed"
                    android:fontFamily="@font/gilroylight"
                    android:textColor="@color/galaxy_blue"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/unknown_power"
                    android:layout_marginLeft="80dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>